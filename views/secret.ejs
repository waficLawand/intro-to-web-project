
<%include partials/header%>

        <div class="container container1">
            <% if (loginStatus == "login successful") {%>
                <h1>LoggedIn As <p><%=user%>!</p></h1>
            
                
                <% } else {%>
                    <% if(error && error.length > 0){ %>
                        <div class="alert alert-danger" id="error" role="alert">
                            <%= error %>
                        </div>
                        <% } %>
                        <% if(success && success.length > 0){ %>
                        <div class="alert alert-success" id="success" role="alert" style="">
                            <%= success %>
                        </div>
                        <% } %>
            <div class="row">
                
            <div class=" firstcol">
                <h2>Weekly Schedule Maker</h2>
                <p>Having trouble with your weekly college schedule? Look no further!</p>
                <p><a class="btn btn-secondary" href="/scheduleMaker" role="button">Get Started!</a></p>
            </div>
            <div class=" secondcol">
                <h2>Tuition Calculator</h2>
                <p>Use this tool for a detailed breakdown of your tuition fees for the semester.</p>
                <p><a class="btn btn-secondary" href="/tuitionCalculator" role="button">Get Started!</a></p>
            </div>
            <div class=" thirdcol">
                <h2>Petition Submission</h2>
                <p>Want to have your voice heard? Add a petition that other students could sign! </p>
                <p><a class="btn btn-secondary" href="/petitions" role="button">Get Started!</a></p>
            </div>
            </div>
        </div>
        <style>
            body{
                background:  -webkit-linear-gradient(left, #40356F, #69E9F5);
            }
        </style>
<% } %>
