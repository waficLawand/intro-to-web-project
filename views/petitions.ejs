<% include partials/header%>

<main role="main">

    <section class="jumbotron text-center">
      <div class="container">
        <h1 class="jumbotron-heading">New Petition Form</h1>
        <p class="lead text-muted">...Once the petition is submitted, it is processed to the concerned persons.</p>
        <p>
          
                <a href="/newPetition"><button  id="newPetition" class="btn btn-primary">Add a New Petition</button></a>         </p>
      </div>
    </section>

    <div class="album py-5 bg-light">
      <div class="container">

        <div class="row">
         
    



    <% for (var i = 0; i < sqlData.length; i++ ) {%>
        <% var flag = false; %>
        <% for (var x =0; x < petitionSigning.length; x++ ) { %>
            <%if ((petitionSigning[x].userId == userId) && (petitionSigning[x].petitionId == sqlData[i].id)){%>
           <%flag = true; %>
            <%}%>
            <%}%>
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">               
                    <div class="image hvrbox">
                        <%if(flag) {%>
                  <img  class="card-img-top hvrbox-layer_bottom" src="<%=sqlData[i].imageUrl%>" alt="Petition Image" title="Petition Image">
                  <a   href="#"> <div class="hvrbox-layer_top-signed signed">
                   <div class="hvrbox-text">Signed</div>
                   <%} else {%>
                    <a href="/petitions/show/:<%=sqlData[i].id%>"><img class="card-img-top hvrbox-layer_bottom" src="<%=sqlData[i].imageUrl%>" alt="Petition Image" title="Petition Image"></a>
                    <form action="/petitionSigned/:<%=sqlData[i].id%>" method="POST">
                        <a href="#" onclick="$(this).closest('form').submit()"><div class="hvrbox-layer_top notSigned">
                     <div class="hvrbox-text">Sign Petition</div>
                    </form> 
                     
                    <%}%>
                </div></a>
                </div>    
                  <div class="overlay"></div>
                  <div class="card-body">
                      <h5><%= sqlData[i].title%></h5>
                    <p class="card-text"><%= sqlData[i].request.substring(0,25); %>...<a href="/petitions/show/:<%=sqlData[i].id%>">Read More</a></p>
               
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="btn-group">
                          
                            <a href="/petitions/show/:<%=sqlData[i].id%>"> <button type="button" class="btn btn-outline-primary">View Petition</button></a>
                        
                      
                      </div>
                      <div class="progress" style="width:40%">
                            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:<%=sqlData[i].votes%>%"><%=sqlData[i].votes%>/<%=sqlData[i].signatureGoal%></div>
                          </div>
                  </div>
                      <!--<form action="/petitionSigned/:<%=sqlData[i].id%>" method="POST"><%if (flag) {%>SIGNED!!<%} else {%><a><button class="btn btn-primary">Sign Petition</button></a><%}%></form>-->
                    </div>
                    
                </div>
              </div>
     
        <%}%>
         
    </div>
</div>
</div>

</main>
 
   


